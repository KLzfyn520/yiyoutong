page{
  background-color: #eeeeee;
}
.main-title{
  height: 90rpx;
  width: 100%;
  background-color: white;
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 50rpx;
}
.choose-transport{
 margin-top:0rpx; 
 display: flex;
 align-items: center;
 width: 100%;
 background-color: #FFFFFF;
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 70rpx;
}
.title{
 font-size: 30rpx;
 color: #808080
}
.transport-btn{
  width: 25%;
  height: 70rpx;
  margin-left:0rpx; 
  background-color: white;
  color: #999999;
  border: none;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.transport-btn::after{
  border: none;
}
.transport-btn.active{
  border: 5rpx solid #00b7ff;
}
.btnImg {
  width: 40rpx;
  height: 40rpx;
  margin-left: 0rpx;
}
.sort{
 margin-top:0rpx; 
 display: flex;
 align-items: center;
 width: 100%;
 background-color: #FFFFFF;
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 70rpx;
}
.sort-btn{
  width: 20%;
  height: 70rpx;
  margin-left:0rpx; 
  margin-top: 0rpx;
  background-color: white;
  color: #999999;
  border: none;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
.sort-btn::after{
  border: none;
}
.sort-btn.active{
  border: 3rpx solid #00b7ff;
}
.form-box{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  border-bottom: 1rpx solid rgb(223, 223, 223);
}
.item-left{
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
}
.time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 50rpx;
}
.img1{
  width: 50rpx;
  height: 50rpx;
}
.line{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img2{
  margin-right: 10rpx;
  width: 35rpx;
  height: 35rpx;
}