page{
  background-color: #eeeeee;
}
.main-title{
  height: 90rpx;
  width: 100%;
  background-color:rgb(61, 67, 98);
  color:white;
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 50rpx;
}
.choose-transport{
 margin-top:0rpx; 
 display: flex;
 align-items: center;
 width: 100%;
 background-color: #FFFFFF;
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 70rpx;
}
.title{
 font-size: 30rpx;
 color: #808080
}
.sort{
 margin-top:0rpx; 
 display: flex;
 align-items: center;
 width: 100%;
 background-color:rgb(61, 67, 98);
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 70rpx;
}
.sort-btn{
  width: 20%;
  height: 70rpx;
  margin-left:0rpx; 
  margin-top: 0rpx;
  background-color: rgb(61, 67, 98);
  color:white;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border-radius: 0rpx;
  transition: 0.2s all linear;
}
.sort-btn::after{
  border: none;
}
.sort-btn.active{
  border-bottom: 6rpx solid rgb(238, 127, 93);
}
.form-box{
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
  border-bottom: 1rpx solid rgb(223, 223, 223);
}

.img1{
  width: 50rpx;
  height: 50rpx;
}
.line{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.direct-box{
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.left-box{
  width: 600rpx;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-left{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}
.time-text{
  font-size: 50rpx;
}
.place-text{
  font-size: 28rpx;
}
.item-middle{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.duration-text{
  font-size: 27rpx;
}
.duration-img{
  width: 130rpx;
  height: 10rpx;
  margin-top: -5rpx;
}
.item-right{
  width: 200rpx;
