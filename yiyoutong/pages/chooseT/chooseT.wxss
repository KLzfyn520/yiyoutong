.container{
  display:flex;
  flex-direction:column;
  background-color: #F4F5F6;
}
.main-title{
  height: 90rpx;
  width: 100%;
  background-color:rgb(61, 67, 98);
  color:white;
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 50rpx;
}
.choose-transport{
 margin-top:20rpx; 
 display: flex;
 align-items: center;
 width: 100%;
 background-color: #FFFFFF;
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 50rpx;
}
.transport-btn{
  width: 25%;
  height: 50px;
  margin-left:0rpx; 
  background-color: #3d4362;
  color: #ffffff;
  border: none;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  transition: 0.2s all linear;
}
.transport-btn::after{
  border: none;
}
.transport-btn.active{
  border-bottom: 6rpx solid rgb(238, 127, 93);
}
.btnImg {
  width: 35rpx;
  height: 35rpx;
  margin-left: 0rpx;
}
.title{
 font-size: 30rpx;
 color: #808080
}
.sort{
 bottom: 0;
 position: absolute;
 display: flex;
 align-items: center;
 width: 100%;
 background-color:rgb(61, 67, 98);
 border-radius: 0rpx;
 /* border: 3rpx solid #CCCCCC; */
 height: 70rpx;
}
.sort-btn{
  width: 20%;
  height: 70rpx;
  margin-left:0rpx; 
  margin-top: 0rpx;
  background-color: rgb(61, 67, 98);
  color:white;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border-radius: 0rpx;
  transition: 0.2s all linear;
}
.sort-btn::after{
  border: none;
}
.sort-btn.active{
  border-bottom: 6rpx solid rgb(238, 127, 93);
}
.form-box{
  width: 100%;
  margin-top:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: white;
}

.img1{
  width: 50rpx;
  height: 50rpx;
}
.line{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.direct-box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left-box{
  width: 600rpx;
  height: 160rpx;
  display: flex;
  margin-left:20rpx;
  align-items: center;
}
.item-left{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}
.time-text{
  font-size: 50rpx;
  font-weight:bold;
}
.place-text{
  font-size: 28rpx;
}
.item-middle{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.duration-text{
  font-size: 27rpx;
}
.duration-img{
  width: 130rpx;
  height: 10rpx;
  margin-top: -5rpx;
}
.item-right{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.rightbox{
  display: flex;
  align-items: center;
  font-size: 40rpx;
  margin-right:20rpx;
}
.price-text{
  font-size: 30rpx;
}
.doubletrip{
  width:100%;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.doubletrip-trip{
  width:90%;
  display:flex;
  flex-direction:column;
  padding:10rpx 20rpx 10rpx 20rpx;
}
.doubletrip-middle{
  width:80%;
  border-radius:30rpx;
  background-color:#F4F5F6;
  color:rgb(60, 60, 60);
  text-align: center;
}
.doubletrip-firsttrip{
  
}
.doubletrip-trip-title{
  display:flex;
  flex-direction:row;
  align-items:center;
  margin-bottom:20rpx;
}
.doubletrip-trip-title-label{
  font-size:24rpx;
  background-color:#ee7f5d;
  font-weight:bold;
  border-radius:6rpx;
  color:white;
  padding:0rpx 10rpx;
  margin-right:20rpx;
  margin-bottom:4rpx;
}
.doubletrip-trip-title-note{
  font-size:28rpx;
  color:#8E8E93;
}
.doubletrip-trip-content{
  display:flex;
  flex-direction:row;
  justify-content: space-around;
}
.doubletrip-trip-left{
  display:flex;
  flex-direction:column;
}
.doubletrip-trip-center{
  display:flex;
  flex-direction:column;
}
.doubletrip-trip-center-text{
  position:relative;
  top:6rpx;
  left:14rpx;
}
.doubletrip-trip-right{
  display:flex;
  flex-direction:column;
  align-items:flex-end;
}




.notDirect-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.change-box{
  width: 130rpx;
  height: 25rpx;
  border: 1rpx solid rgb(138, 138, 138);
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
}
.change-text{
  margin-top: -5rpx;
  font-size: 23rpx;
  color: rgb(241, 103, 60)
}

.showDetail{
  display: flex;
  align-items: center
}
.show-text{
  font-size: 20rpx;
  color: rgb(158, 157, 157)
}
.img2{
  width: 20rpx;
  height: 20rpx;
}

.array-box{
  margin-top:20rpx;
  height:950rpx;
}

.cur-toast{
  position:absolute;
  top:0; left: 0; right:0; bottom: 0;
  z-index:999;
}
.cur-toast-cancel{
  position:absolute;
  top:0; left: 0; right:0; bottom: 0;
  z-index:1000;
  background-color: rgba(0,0,0,.5);
}
.cur-toast-content{
  position: absolute;
  top: 400rpx;
  left: 20%;
  width:60%;
  z-index:1001;
  display:flex;
  flex-direction:column;
  align-items:center;
  background-color: #3d4362;
  border-radius:10rpx;
  padding:20rpx 20rpx;
}
.cur-toast-title{
  color:white;
  margin-bottom:40rpx;
}
.cur-toast-options{
  width:90%;
}
.cur-toast-options-item{
  text-align: center;
  border-radius: 10rpx;
  color:white;
  background-color:#ee7f5d;
  margin-bottom:20rpx;
}