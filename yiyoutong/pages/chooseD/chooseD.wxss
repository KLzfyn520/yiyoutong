.modals{position:fixed; z-index: 999; top:0; left: 0; right:0; bottom: 0;}
.modals-cancel{position:absolute; z-index:1000; top:0; left: 0; right:0; bottom: 0; background-color: rgba(0,0,0,.5);}
.bottom-dialog-body{position:absolute; z-index:10001; bottom:0; left:0; right:0; padding:20rpx; height:1100rpx; background-color: #fff;}
/*动画前初始位置*/
.bottom-pos{-webkit-transform:translateY(100%);transform:translateY(100%);}
.bottom-dialog-content{
  display:flex;
  flex-direction:column;
}
.modals-scroll-view{
  display:flex;
  flex-direction:column;
  height:970rpx;
}
.modals-title{
  width:100%;
  text-align: center;
  font-size:14pt;
  font-weight:bold;
}
.modals-container{
  display:flex;
  flex-direction:column;
}
.modals-subtitle{
  margin-bottom:20rpx;
  font-size:10pt;
  font-weight:bold;
}
.modals-city-list{
  display:flex;
  flex-wrap: wrap;
  margin-bottom:20rpx;
}
.modals-alpha-list{
  display:flex;
  flex-wrap: wrap;
  margin-bottom:20rpx;
}
.modals-city-block{
  width:23%;
  padding:10rpx 0rpx;
  text-align:center;
  font-size:10pt;
  margin:0rpx 10rpx 10rpx 0rpx;
  border:1px solid #D1D1D2;
  border-radius:10rpx;
}
.modals-city-block-hover{
  color:#007AFE;
  border:1px solid #007AFE;
}
.modals-alpha-block{
  width:10.5%;
  padding:10rpx 0rpx;
  text-align:center;
  font-size:10pt;
  margin:0rpx 10rpx 10rpx 0rpx;
  border:1px solid #D1D1D2;
  border-radius:10rpx;
}
.modals-alpha-block-hover{
  color:#007AFE;
  border:1px solid #007AFE;
}
.modals-city-list-hover .modals-city-list-block-hover{
  color:#007AFE;
  border:1px solid #007AFE;
}
.search-result{
  display:flex;
  flex-direction:column;
  border-top:1px solid #F1F1D2;
}
.search-result-item{
  padding:10rpx 20rpx;
  border-bottom:1px solid #D1D1D2;
}