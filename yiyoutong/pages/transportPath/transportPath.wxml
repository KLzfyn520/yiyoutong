<view class="container">
  <view class="map_container" style="width:100%;height:{{winHeight * 0.8}}px;">
    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="18" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height:{{winHeight}}px;"></map>
  </view>
</view>
  <scroll-view class="info" bindtouchmove="touchMove" bindtouchend="touchEnd" style="top:{{top}}px;height:{{winHeight}}px">
    <view class="info-icon">
      <view class="info-icon-content"></view>
    </view>
    <view class="main">
      <text style="font-size:40rpx;font-weight:bold;">{{time}}</text>
      <text style="font-size:30rpx;">{{distance}}</text>
    </view>
    <view class="note" style="height:800rpx;">
      <text>{{note}}</text>
    </view>
  </scroll-view>